-- Core Systems and Handlers
local function InitializeCoreSystems()
    -- Hitbox System
    local function UpdateHitboxes()
        if Systems.Hitbox.Personal.Enabled then
            local character = player.Character
            if character then
                for _, part in pairs(character:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.Size = Vector3.new(
                            Systems.Hitbox.Personal.Size,
                            Systems.Hitbox.Personal.Size,
                            Systems.Hitbox.Personal.Size
                        )
                        part.Transparency = Systems.Hitbox.Personal.Visible and 0.5 or 0
                    end
                end
            end
        end
    end

    -- ESP System Implementation
    local function CreateESPForPlayer(plr)
        local esp = Drawing.new("Square")
        esp.Thickness = 1
        esp.Filled = false
        esp.Transparency = 1
        esp.Color = Systems.ESP.Settings.CustomColors.Enemy
        Systems.ESP.Players[plr.Name] = esp
        return esp
    end

    local function UpdateESP()
        for _, plr in pairs(Players:GetPlayers()) do
            if plr ~= player and Systems.ESP.Enabled then
                local character = plr.Character
                if character then
                    local humanoid = character:FindFirstChild("Humanoid")
                    local rootPart = character:FindFirstChild("HumanoidRootPart")
                    if humanoid and rootPart then
                        local esp = Systems.ESP.Players[plr.Name] or CreateESPForPlayer(plr)
                        local vector, onScreen = workspace.CurrentCamera:WorldToViewportPoint(rootPart.Position)
                        if onScreen then
                            esp.Visible = true
                            esp.Size = Vector2.new(2000 / vector.Z, 2500 / vector.Z)
                            esp.Position = Vector2.new(vector.X - esp.Size.X / 2, vector.Y - esp.Size.Y / 2)
                        else
                            esp.Visible = false
                        end
                    end
                end
            end
        end
    end

    -- Movement System
    local function UpdateMovement()
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChild("Humanoid")
            if humanoid then
                if Systems.Movement.Speed.Enabled then
                    humanoid.WalkSpeed = Systems.Movement.Speed.Value
                end
                if Systems.Movement.Jump.Enabled then
                    humanoid.JumpPower = Systems.Movement.Jump.Value
                end
            end
        end
    end

    -- Initialize All Systems
    RunService.RenderStepped:Connect(function()
        UpdateHitboxes()
        UpdateESP()
        UpdateMovement()
    end)
end
